{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "‚öôÔ∏èüîß Setup Debug",
            "type": "shell",
            "problemMatcher": "$gcc",
            "command": "cmake -DCMAKE_BUILD_TYPE=DEBUG ../.. -G \"MinGW Makefiles\"",
            "options": {
                "cwd": "${workspaceRoot}/build/debug"
            }
        },
        {
            "label": "üîß Build Debug",
            "type": "shell",
            "problemMatcher": "$gcc",
            "command": "cmake --build . --parallel",
            "options": {
                "cwd": "${workspaceRoot}/build/debug"
            }
        },
        {
            "label": "‚öôÔ∏èüöÄ Setup Release",
            "type": "shell",
            "problemMatcher": "$gcc",
            "command": "cmake -DCMAKE_BUILD_TYPE=RELEASE ../.. -G \"MinGW Makefiles\"",
            "options": {
                "cwd": "${workspaceRoot}/build/release"
            }
        },
        {
            "label": "üöÄ Build Release",
            "type": "shell",
            "problemMatcher": "$gcc",
            "command": "cmake --build . --parallel",
            "options": {
                "cwd": "${workspaceRoot}/build/release"
            }
        }
    ]
}
